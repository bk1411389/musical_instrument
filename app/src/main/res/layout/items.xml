<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="100dp">

    <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent" app:srcCompat="@drawable/music_piano" android:id="@+id/imageView"
            android:layout_weight="1"/>
    <TextView
            android:text="楽器の名前"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:id="@+id/explainView" android:layout_weight="1"
            android:gravity="center" android:textSize="18sp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent" app:srcCompat="@android:drawable/ic_media_play"
            android:id="@+id/playView" android:layout_weight="1"/>
</LinearLayout>